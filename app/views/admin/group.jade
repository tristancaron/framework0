extends ../layout

block content
  .content-header
    .header-section
      h1
        i.gi.gi-heart
        | Group
        br
        small Management

  ul.breadcrumb.breadcrumb-top
    li Admin
    li
      a(href='#') Group

  .row

    .col-md-6
      .block.full
        .block-title
          h2 Groups
        div.table-responsive
          table#group-datatable.table.table-vcenter.table-condensed.table-bordered
            thead
              tr
                th
                th Group Name

    .col-md-6
      .block.full
        .block-title
          h2 Create Group
        form.form-horizontal.form-bordered(action='/admin/group/add', method='post')
          .form-group
            label.col-md-3.control-label(for='group-name') Group name
            .col-md-9
              input#group-name.form-control(type='text', name='group-name', placeholder='Enter Group Name..')
          fieldset
            legend Rules

            each rule in rules
              .form-group
                label.col-md-3.control-label #{rule}
                .col-md-9
                  label.checkbox-inline(for='#{rule}-write')
                    input(id="#{rule}-write", type='checkbox', name='#{rule}.write')
                    |  write
                  label.checkbox-inline(for='#{rule}-read')
                    input(id="#{rule}-read", type='checkbox', name='#{rule}.read')
                    |  read

          .form-group.form-actions
            .col-md-9.col-md-offset-3
              button.btn.btn-sm.btn-primary(type='submit')
                i.fa.fa-user
                |  Add
              | &nbsp;
              button.btn.btn-sm.btn-warning(type='reset')
                i.fa.fa-repeat
                |  Reset

  script(src='/js/vendor/jquery-1.11.3.min.js')
  script(src='/js/vendor/bootstrap.min.js')
  script(src='/js/plugins.js')
  script(src='/js/app.js')
  script(src='/js/pages/admin.group.js')

  include ../partial/setting-modal
